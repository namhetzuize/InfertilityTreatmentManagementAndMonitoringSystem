@page "{userId:guid}"
@model InfertilityTreatmentSystem.Pages.UserPage.DetailsModel

@{
    ViewData["Title"] = "User Details";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">User Details</h1>

    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h3>User Information</h3>
        </div>
        <div class="card-body">
            <!-- Display Avatar -->
            @if (!string.IsNullOrEmpty(Model.user.Avatar))
            {
                <div class="text-center mb-4">
                    <img src="@Model.user.Avatar" alt="User Avatar" class="img-fluid rounded-circle" style="max-width: 150px; height: auto;" />
                </div>
            }
            <p><strong>Full Name:</strong> @Model.user.FullName</p>
            <p><strong>User Name:</strong> @Model.user.UserName</p>
            <p><strong>Phone Number:</strong> @Model.user.PhoneNumber</p>
            <p><strong>Role:</strong> @Model.user.Role</p>
            <p><strong>Age:</strong> @Model.user.Age</p>
        </div>
    </div>

    <div class="text-center mt-4">
        <a href="@Url.Page("./Edit", new { userId = Model.user.UserId })" class="btn btn-warning btn-lg mx-2">Edit</a>
    </div>
</div>
