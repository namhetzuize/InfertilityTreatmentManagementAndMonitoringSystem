@page "{userId:guid}"
@using Microsoft.AspNetCore.Authorization
@model InfertilityTreatmentSystem.Pages.UserPage.DeleteModel
@attribute [Authorize(Roles = "Admin")]

@{
    ViewData["Title"] = "Xóa tài khoản";
}

<div class="container my-5">
    <div class="card border-danger shadow-sm" style="max-width:500px; margin:auto;">
        <div class="card-body text-center">
            <h4 class="card-title text-danger mb-4">Bạn có chắc về việc xóa tài khoản này không?</h4>
            <form method="post" class="d-inline">
                <input type="hidden" asp-for="UserId" />
                <button type="submit" class="btn btn-danger px-4">Xác nhận</button>
            </form>
            <a asp-page="./Index" class="btn btn-secondary px-4 ms-2">Hủy</a>
        </div>
    </div>
</div>

<style>
    /* on-hover feedback for the buttons */
    .btn-danger:hover, .btn-danger:focus {
        background-color: #dd2130;
        border-color: #bb1f2d;
    }

    .btn-secondary:hover, .btn-secondary:focus {
        background-color: #6c757d;
        border-color: #5c636a;
    }
</style>
