@page "{userId:guid}"
@using System.Security.Claims
@model InfertilityTreatmentSystem.Pages.UserPage.EditModel

@{
    ViewData["Title"] = "Appointment Details";
    var role = User.FindFirstValue(ClaimTypes.Role);
}
@if(role == "Admin")
{
    <div class="container mt-5">
        <h1 class="text-center mb-4">Edit User</h1>

        <div class="card shadow-lg">
            <div class="card-header bg-primary text-white">
                <h3>Edit User Information</h3>
            </div>
            <div class="card-body">
                <form method="post">
                    <div class="form-group mb-3">
                        <label asp-for="User.FullName" class="form-label">Full Name</label>
                        <input asp-for="User.FullName" class="form-control" />
                        <span asp-validation-for="User.FullName" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="User.UserName" class="form-label">User Name</label>
                        <input asp-for="User.UserName" class="form-control" />
                        <span asp-validation-for="User.UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="User.Password" class="form-label">Password</label>
                        <input asp-for="User.Password" class="form-control" />
                        <span asp-validation-for="User.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="User.PhoneNumber" class="form-label">Phone Number</label>
                        <input asp-for="User.PhoneNumber" class="form-control" />
                        <span asp-validation-for="User.PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="User.Age" class="form-label">Age</label>
                        <input asp-for="User.Age" class="form-control" />
                        <span asp-validation-for="User.Age" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="User.Role" class="form-label">Role</label>
                        <input asp-for="User.Role" class="form-control" />
                        <span asp-validation-for="User.Role" class="text-danger"></span>
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-success btn-lg">Save Changes</button>
                        <a asp-page="./Details" asp-route-userId="@Model.User.UserId"
                           class="btn btn-secondary btn-lg mx-2">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
}else if(role == "Doctor" || role == "Customer")
{
<div class="container mt-5">
    <h1 class="text-center mb-4">Edit User</h1>

    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h3>Edit User Information</h3>
        </div>
        <div class="card-body">
            <form method="post">
                <div class="form-group mb-3">
                    <label asp-for="User.FullName" class="form-label">Full Name</label>
                    <input asp-for="User.FullName" class="form-control" />
                    <span asp-validation-for="User.FullName" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="User.UserName" class="form-label">User Name</label>
                    <input asp-for="User.UserName" class="form-control" />
                    <span asp-validation-for="User.UserName" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="User.Password" class="form-label">Password</label>
                    <input asp-for="User.Password" class="form-control" />
                    <span asp-validation-for="User.Password" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="User.PhoneNumber" class="form-label">Phone Number</label>
                    <input asp-for="User.PhoneNumber" class="form-control" />
                    <span asp-validation-for="User.PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="User.Age" class="form-label">Age</label>
                    <input asp-for="User.Age" class="form-control" />
                    <span asp-validation-for="User.Age" class="text-danger"></span>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-success btn-lg">Save Changes</button>
                    <a asp-page="./Details" asp-route-userId="@Model.User.UserId"
                       class="btn btn-secondary btn-lg mx-2">Cancel</a>
                </div>
            </form>
        </div>
    </div>
    </div>
}
else
{
    <div class="container mt-5">
        <div class="alert alert-danger text-center">
            <h4 class="alert-heading">Access Denied</h4>
            <p>You do not have permission to edit this user.</p>
            <a asp-page="/UserPage/Index" class="btn btn-primary">Back to User List</a>
        </div>
    </div>
}


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
