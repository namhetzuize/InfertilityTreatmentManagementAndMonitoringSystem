@page "{userId:guid}"
@model InfertilityTreatmentSystem.Pages.UserPage.EditModel

@{
    ViewData["Title"] = "Edit User";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Edit User</h1>

    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h3>Edit User Information</h3>
        </div>
        <div class="card-body">
            <form method="post">
                <div class="form-group mb-3">
                    <label for="FullName">Full Name</label>
                    <input type="text" class="form-control" id="FullName" name="FullName" value="@Model.User.FullName" required />
                </div>
                <div class="form-group mb-3">
                    <label for="UserName">User Name</label>
                    <input type="text" class="form-control" id="UserName" name="UserName" value="@Model.User.UserName" required />
                </div>
                <div class="form-group mb-3">
                    <label for="PhoneNumber">Phone Number</label>
                    <input type="text" class="form-control" id="PhoneNumber" name="PhoneNumber" value="@Model.User.PhoneNumber" />
                </div>
                <div class="form-group mb-3">
                    <label for="Age">Age</label>
                    <input type="number" class="form-control" id="Age" name="Age" value="@Model.User.Age" required />
                </div>
                <div class="form-group mb-3">
                    <label for="Role">Role</label>
                    <input type="text" class="form-control" id="Role" name="Role" value="@Model.User.Role" required />
                </div>
                <div class="form-group mb-3">
                    <label for="IsActive">Active</label>
                    <input type="checkbox" id="IsActive" name="IsActive" @(Model.User.IsActive ? "checked" : "") />
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-success btn-lg">Save Changes</button>
                    <a href="@Url.Page("./Details", new { userId = Model.User.UserId })" class="btn btn-secondary btn-lg mx-2">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
