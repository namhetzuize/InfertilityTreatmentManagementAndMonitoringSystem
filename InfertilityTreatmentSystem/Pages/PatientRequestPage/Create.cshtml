@page
@model InfertilityTreatmentSystem.Pages.PatientRequestPage.CreateModel

@{
    ViewData["Title"] = "Create Patient Request";
}

<h1>Create Patient Request</h1>

<form method="post">
    <div class="mb-3">
        <label for="CustomerId" class="form-label">Customer</label>
        <select class="form-control" id="CustomerId" name="CustomerId" required>
            @foreach (var customer in Model.Customers)
            {
                <option value="@customer.UserId">@customer.UserName</option>
            }
        </select>
    </div>

    <div class="mb-3">
        <label for="DoctorId" class="form-label">Doctor</label>
        <select class="form-control" id="DoctorId" name="DoctorId" required>
            @foreach (var doctor in Model.Doctors)
            {
                <option value="@doctor.UserId">@doctor.UserName</option>
            }
        </select>
    </div>

    <div class="mb-3">
        <label for="ServiceId" class="form-label">Service</label>
        <select class="form-control" id="ServiceId" name="ServiceId" required>
            @foreach (var service in Model.Services)
            {
                <option value="@service.ServiceId">@service.ServiceName</option>
            }
        </select>
    </div>

    <div class="mb-3">
        <label for="Note" class="form-label">Note</label>
        <textarea class="form-control" id="Note" name="Note" required></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>
