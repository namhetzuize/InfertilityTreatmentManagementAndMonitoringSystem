@page "{recordId:guid}"
@model InfertilityTreatmentSystem.Pages.MedicalRecordPage.EditModel

@{
    ViewData["Title"] = "Edit Medical Record";
}

<h1>Edit Medical Record</h1>

<form method="post">
    <div class="mb-3">
        <label for="Prescription" class="form-label">Prescription</label>
        <input type="text" class="form-control" id="Prescription" name="Prescription" value="@Model.Record.Prescription" required />
    </div>

    <div class="mb-3">
        <label for="TestResults" class="form-label">Test Results</label>
        <textarea class="form-control" id="TestResults" name="TestResults" rows="3" required>@Model.Record.TestResults</textarea>
    </div>

    <div class="mb-3">
        <label for="Note" class="form-label">Note</label>
        <textarea class="form-control" id="Note" name="Note" rows="3">@Model.Record.Note</textarea>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
    <a href="@Url.Page("./Index")" class="btn btn-secondary">Cancel</a>
</form>
