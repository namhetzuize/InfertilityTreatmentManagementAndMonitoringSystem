@page "{serviceId:guid}"
@model InfertilityTreatmentSystem.Pages.TreatmentServicePage.DeleteModel

@{
    ViewData["Title"] = "Xoá dịch vụ điều trị";
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger text-center fw-semibold">
        @TempData["ErrorMessage"]
    </div>
}

<style>
    .delete-container {
        background-color: #fff;
        border-radius: 16px;
        padding: 30px;
        box-shadow: 0 0 20px rgba(220, 53, 69, 0.1);
        animation: fadeIn 0.6s ease-in-out;
    }

    @@keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(-10px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    .btn {
        border-radius: 12px;
        padding: 10px 20px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .btn-danger:hover {
        background-color: #c82333;
        transform: scale(1.05);
    }

    .btn-secondary:hover {
        transform: scale(1.03);
    }

    .info-label {
        font-weight: 600;
    }

    .info-value {
        color: #212529;
    }

    h1 {
        font-weight: bold;
        color: #dc3545;
        margin-bottom: 20px;
    }
</style>

<div class="container mt-5 mb-5" style="max-width: 700px;">
    <div class="delete-container">
        <h1>🗑️ Xoá dịch vụ điều trị</h1>

        <p class="text-danger fs-5">⚠️ Bạn có chắc chắn muốn xoá dịch vụ này không? Hành động này không thể hoàn tác.</p>

        <div class="mb-4">
            <p><span class="info-label">💊 Tên dịch vụ:</span> <span class="info-value">@Model.Service.ServiceName</span></p>
            <p><span class="info-label">📝 Mô tả:</span> <span class="info-value">@Model.Service.Description</span></p>
            <p><span class="info-label">💵 Giá:</span> <span class="info-value">@string.Format("{0:N0} ₫", @Model.Service.Price)</span></p>
        </div>

        <form method="post" class="d-flex gap-3">
            <button type="submit" class="btn btn-danger">🗑️ Xoá</button>
            <a href="@Url.Page("./Index")" class="btn btn-secondary">⬅️ Huỷ</a>
        </form>
    </div>
</div>