@page
@model InfertilityTreatmentSystem.Pages.BlogPage.EditModel

@{
    Layout = null;
    ViewData["Title"] = "Chỉnh sửa bài viết";
   
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <style>
        .form-container {
            max-width: 700px;
            margin: 50px auto;
            background: #ffffff;
            border-radius: 12px;
            padding: 40px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
            animation: fadeIn 0.6s ease;
        }

        @@keyframes fadeIn {
            from

        {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        .btn-custom {
            transition: all 0.3s ease;
        }

            .btn-custom:hover {
                transform: scale(1.05);
                box-shadow: 0 5px 15px rgba(0, 123, 255, 0.4);
            }

        .btn-back:hover {
            transform: translateX(-3px);
            background-color: #e9ecef;
        }
    </style>
</head>
<body class="bg-light">
    <div class="container">
        <div class="form-container">
            <h2 class="mb-4 text-center text-primary">@ViewData["Title"]</h2>
            
                
               
           
            <form method="post">
                
                <div class="mb-3">
                    <label for="Title" class="form-label fw-semibold">📝 Tiêu đề bài viết</label>
                    <input type="text" class="form-control" id="Title" name="Title" value="@Model.Blog.Title" required />
                </div>

                <div class="mb-3">
                    <label for="Content" class="form-label fw-semibold">📄 Nội dung</label>
                    <textarea class="form-control" id="Content" name="Content" rows="6" required>@Model.Blog.Content</textarea>
                </div>

                <div class="d-flex justify-content-between mt-4">


                    <a asp-page="/BlogPage/Details"
                       asp-route-blogId="@Model.Blog.BlogId"
                       class="btn btn-outline-secondary btn-back">
                        ⬅️ Quay lại
                    </a>
                    
                    <button type="submit" class="btn btn-success btn-custom px-5 rounded-pill fw-semibold">
                        💾 Lưu thay đổi
                    </button>
                </div>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>