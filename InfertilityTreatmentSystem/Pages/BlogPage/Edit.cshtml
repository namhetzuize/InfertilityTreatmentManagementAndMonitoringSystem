@page
@model InfertilityTreatmentSystem.Pages.BlogPage.EditModel

@{
    Layout = null;
    ViewData["Title"] = "Edit Blog";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Edit Blog</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container">
        <h1 class="my-4">@ViewData["Title"]</h1>

        <form method="post">
            <div class="mb-3">
                <label for="Title" class="form-label">Title</label>
                <input type="text" class="form-control" id="Title" name="Title" value="@Model.Blog.Title" required />
            </div>
            <div class="mb-3">
                <label for="Content" class="form-label">Content</label>
                <textarea class="form-control" id="Content" name="Content" rows="3" required>@Model.Blog.Content</textarea>
            </div>

            <button type="submit" class="btn btn-primary">Save Changes</button>
        </form>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
