@page
@model InfertilityTreatmentSystem.Pages.BlogPage.IndexModel
@{
    ViewData["Title"] = "Blogs";
}

<h1>Blogs</h1>

<form method="get" class="mb-3">
    <input type="text"
           name="searchTerm"
           value="@Model.searchTerm"
           placeholder="Search…" />
    @* preserve the doctor filter on search *@
    @if (Model.DoctorId.HasValue)
    {
        <input type="hidden" name="DoctorId" value="@Model.DoctorId" />
    }
    <button type="submit" class="btn btn-secondary">Search</button>
</form>

@if (Model.Blogs.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Content</th>
                <th>Date</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var b in Model.Blogs)
            {
                <tr>
                    <td>@b.Title</td>
                    <td>@b.Content</td>
                    <td>
                        @(
                                        b.CreatedDate.HasValue
                                        ? b.CreatedDate.Value.ToString("dd-MM-yyyy HH:mm:ss")
                                        : ""
                                        )
                </td>
                <td>
                    <a asp-page="./Details"
                       asp-route-blogId="@b.BlogId"
                       class="btn btn-sm btn-info">
                        Details
                    </a>
                </td>
            </tr>
                }
        </tbody>
    </table>

    @* only show pager when not filtered by a doctor *@
    @if (!Model.DoctorId.HasValue)
    {
        <nav>
            <ul class="pagination">
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                        <a class="page-link"
                           asp-route-pageIndex="@i"
                           asp-route-searchTerm="@Model.searchTerm">
                            @i
                        </a>
                    </li>
                }
            </ul>
        </nav>
    }
}
else
{
    <p>No blogs found.</p>
}

@if (User.IsInRole("Admin") || User.IsInRole("Doctor"))
{
    <a asp-page="./Create"
       asp-route-doctorId="@Model.DoctorId"
       class="btn btn-primary">
        Create New Blog
    </a>
}
