@page "{scheduleId:guid}"
@model InfertilityTreatmentSystem.Pages.SchedulePage.DeleteModel

@{
    ViewData["Title"] = "Delete Schedule";
}

<h1>Delete Schedule</h1>

<p>Are you sure you want to delete this schedule?</p>

<div>
    <h3>Schedule Information</h3>
    <p><strong>Customer:</strong> @Model.Schedule.Customer?.UserName</p>
    <p><strong>Doctor:</strong> @Model.Schedule.Doctor?.UserName</p>
    <p><strong>Service:</strong> @Model.Schedule.SerivceName</p>
    <p><strong>Schedule Date:</strong> @Model.Schedule.ScheduleDate?.ToString("MM/dd/yyyy")</p>
    <p><strong>Note:</strong> @Model.Schedule.Note</p>
</div>

<form method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Page("./Index")" class="btn btn-secondary">Cancel</a>
</form>
