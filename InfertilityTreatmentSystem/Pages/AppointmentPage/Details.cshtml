@page "{id:guid}"
@model InfertilityTreatmentSystem.Pages.AppointmentPage.DetailsModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h1>Appointment Details</h1>

<div><strong>Customer:</strong> @(Model.Appointment.Customer?.UserName ?? "—")</div>
<div><strong>Doctor:</strong>   @(Model.Appointment.Doctor?.UserName ?? "—")</div>
<div><strong>Service:</strong>  @(Model.Appointment.Service?.ServiceName ?? "—")</div>

<div>
    <strong>Date:</strong>
    @Model.Appointment.AppointmentDate.ToString("MM/dd/yyyy HH:mm")
</div>

<div><strong>Status:</strong> @(Model.Appointment.Status)</div>

@if (!string.IsNullOrWhiteSpace(Model.Appointment.RejectReason))
{
    <div><strong>Reject Reason:</strong> @Model.Appointment.RejectReason</div>
}

<a asp-page="./Index" class="btn btn-secondary mt-3">Back to List</a>
