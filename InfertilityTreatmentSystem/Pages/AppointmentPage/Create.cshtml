<h1>Create Appointment</h1>

<form method="post">
    
    <input asp-for="Appointment.CustomerId" type="hidden" />
   @*  <div class="mb-3">
        <label asp-for="Appointment.CustomerId" class="form-label">Customer</label>
        <select asp-for="Appointment.CustomerId"
                class="form-select"
                asp-items="Model.Customers">
            <option value="">-- select customer --</option>
        </select>
        <span asp-validation-for="Appointment.CustomerId" class="text-danger"></span>
