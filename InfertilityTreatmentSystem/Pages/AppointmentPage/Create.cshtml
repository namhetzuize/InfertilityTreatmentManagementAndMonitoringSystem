    <div class="mb-3">
        <label asp-for="Appointment.DoctorId" class="form-label">Doctor</label>
        <select asp-for="Appointment.DoctorId"
                class="form-select"
                asp-items="Model.Doctors">
            <option value="">-- select doctor --</option>
        </select>
        <span asp-validation-for="Appointment.DoctorId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Appointment.ServiceId" class="form-label">Service</label>
        <select asp-for="Appointment.ServiceId"
                class="form-select"
                asp-items="Model.Services">
            <option value="">-- select service --</option>
        </select>
        <span asp-validation-for="Appointment.ServiceId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Appointment.AppointmentDate" class="form-label">Date &amp; Time</label>
        <input asp-for="Appointment.AppointmentDate"
               type="datetime-local"
               class="form-control" />
