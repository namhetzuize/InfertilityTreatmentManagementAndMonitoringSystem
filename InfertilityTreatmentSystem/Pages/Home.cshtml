@page
@model InfertilityTreatmentSystem.Pages.HomeModel
@{
    ViewData["Title"] = "Homepage";
}

<div class="container py-5">
    <!-- Giới thiệu -->
    <div class="text-center mb-5">
        <h1 class="fw-bold text-primary">Chào mừng đến với Trung tâm Điều trị Hiếm Muộn</h1>
        <p class="lead text-muted">Chúng tôi cung cấp các dịch vụ hiện đại như IUI, IVF, Đông lạnh phôi... giúp các cặp vợ chồng hiện thực hóa giấc mơ làm cha mẹ.</p>
    </div>

    <!-- Dịch vụ nổi bật -->
    <section class="mb-5">
        <h3 class="text-secondary mb-4">🌟 Dịch vụ nổi bật</h3>
        <div class="row">
            @foreach (var service in Model.TreatmentServices)
            {
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm h-100 border-0">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-primary">@service.ServiceName</h5>
                            <p class="card-text text-muted">@service.Description?.Substring(0, Math.Min(service.Description.Length, 100))...</p>
                            <div class="mt-auto">
                                <a href="/Services/Details?id=@service.ServiceId" class="btn btn-outline-primary w-100">Xem chi tiết</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>

    <!-- Blog mới nhất -->
    <section class="mb-5">
        <h3 class="text-secondary mb-4">📰 Bài viết mới</h3>
        <div class="list-group">
            @foreach (var blog in Model.Blogs)
            {
                <a class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                    <div>
                        <strong>@blog.Title</strong>
                    </div>
                    <small class="text-muted">@blog.CreatedDate?.ToString("dd/MM/yyyy")</small>
                </a>
            }
        </div>
    </section>

    <!-- Nút đặt lịch -->
    @if (User.Identity.IsAuthenticated)
    {
        <div class="text-center mt-5">
            <a class="btn btn-success btn-lg px-5 py-2 shadow" href="/Appointment/Index">Đặt lịch khám ngay</a>
        </div>
    }
</div>
